	<select id="listNoticeTop" resultType="com.fa.plus.domain.Notice">
		SELECT n.notice_category_num, category_name, notice_title, n.category_reg_id, 
			TO_CHAR(category_reg_date, 'YYYY-MM-DD') category_reg_date
		FROM notice n
		JOIN user1 u ON n.category_reg_id = u.useridx
		WHERE notice = 1 AND category_visible = 1
		ORDER BY notice DESC
		
	</select>
	
	<select id="dataCount" parameterType="map" resultType="com.fa.plus.domain.Notice">
		SELECT NVL(COUNT(*), 0)
		FROM notice n
		JOIN user1 u ON n.category_reg_id=m.useridx
		<where>
			category_visible = 1
			<if test="kwd != null and kwd!='' ">
				AND <include refid="where-list"/>
			</if>
		</where>
	
	</select>
	
	<select id="listNotice" parameterType="map" resultType="com.fa.plus.domain.Notice">
	
	</select>
	
