<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fa.plus.mapper.NoticeMapper">
	<sql id="where-list">
		<if test="schType=='all' ">
			( INSTR(subject, #{kwd}) &gt; 0 
				OR DBMS_LOB.INSTR(notice_content, #{kwd}) &gt; 0)
		</if>
		<if test="schType=='notice_title' ">
			INSTR(notice_title, #{kwd}) &gt;0
		</if>
		<if test="schType=='notice_content' ">
			DBMS_LOB.INSTR( notice_content, #{kwd}) &gt; 0 
		</if>
		<if test="schType=='notice_reg_id' ">
			notice_reg_id=#{kwd}
		</if>
		<if test="schType=='notice_reg_date' ">
			( TO_CHAR(notice_reg_date, 'YYYY-MM-DD') = #{kwd}
				OR TO_CHAR(notice_reg_date, 'YYYYMMDD') = #{kwd} )
		</if>
		
	</sql>
	
